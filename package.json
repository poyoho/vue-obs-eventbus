{
  "name": "vue-obs-eventbus",
  "license": "MIT",
  "author": "poyoho",
  "description": "vue eventbus with devtools",
  "type": "module",
  "main": "index.js",
  "module": "dist/vue-obs-eventbus.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/vue-obs-eventbus.esm-browser.js",
      "node": {
        "import": {
          "production": "./dist/vue-obs-eventbus.prod.cjs",
          "development": "./dist/vue-obs-eventbus.mjs",
          "default": "./dist/vue-obs-eventbus.mjs"
        },
        "require": {
          "production": "./dist/vue-obs-eventbus.prod.cjs",
          "development": "./dist/vue-obs-eventbus.cjs",
          "default": "./index.js"
        }
      },
      "import": "./dist/vue-obs-eventbus.mjs"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "version": "0.0.13",
  "repository": {
    "type": "git",
    "url": "https://github.com/poyoho/vue-obs-eventbus"
  },
  "keywords": [
    "vue",
    "eventbus",
    "devtools"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p build:dev build:prod build:dts",
    "build:dev": "vite build",
    "build:prod": "vite build -c vite.config.prod",
    "build:dts": "tsc",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release": "release",
    "ci-publish": "release publish",
    "format": "prettier --write .",
    "codecov": "codecov",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "lint-staged": "^12.3.3",
    "c8": "^7.11.0",
    "codecov": "^3.8.3",
    "execa": "^5.1.1",
    "picocolors": "^1.0.0",
    "prettier": "2.5.1",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.6.2",
    "vite": "^4.0.3",
    "vitest": "^0.26.2",
    "vue": "^3.2.30",
    "@vitejs/plugin-vue": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "release-prompt": "^0.0.13"
  },
  "dependencies": {
    "@vue/devtools-api": "^6.1.0",
    "vue-demi": "*"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0",
    "typescript": ">=4.4.4",
    "vue": "^2.6.14 || ^3.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "files": [
    "dist",
    "index.js",
    "index.cjs"
  ]
}
